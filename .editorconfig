root = true

[**]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[**.{js,json,jsx}]
trim_trailing_whitespace = true
quote_type = single
curly_bracket_next_line = false
spaces_around_operators = true
space_after_control_statements = true
space_after_anonymous_functions = true
spaces_in_brackets = false

[**.{css,scss}]
trim_trailing_whitespace = true
indent_style = tab

[**.{yml}]
trim_trailing_whitespace = true
indent_style = tab

[**.html]
trim_trailing_whitespace = true

[**.md]
indent_style = tab

[Makefile]
indent_style = tab

[**.sol]
indent_size = 4

[**.go]
indent_size = 2
indent_style = tab
